{
    "swagger": "2.0",
    "info": {
        "version": "0.0.1",
        "title": "Tokenly Music Public API",
        "description": "API methods for Tokenly Music.  API calls begin with https://music-stage.tokenly.com.  Protected API calls require authentication.  See https://github.com/tokenly/hmac-auth/blob/master/README.md for details."
    },
    "host": "music-stage.tokenly.com",
    "schemes": [
        "https"
    ],
    "basePath": "/api/v1",
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "apiKey": {
            "description": "Requires API key with signature and nonce headers.  See https://github.com/tokenly/hmac-auth/blob/master/README.md for details.",
            "type": "apiKey",
            "name": "X-Tokenly-Auth-Api-Token",
            "in": "header"
        }
    },
    "tags": [
        {
            "name": "public",
            "description": "Public API Calls"
        },
        {
            "name": "protected",
            "description": "Protected API Calls"
        },
        {
            "name": "account",
            "description": "Account API Calls"
        }
    ],
    "paths": {
        "/music/catalog/albums": {
            "get": {
                "summary": "List all available albums",
                "tags": [
                    "public"
                ],
                "description": "Returns a list of albums.\n",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Album"
                            }
                        }
                    }
                }
            }
        },
        "/music/catalog/songs/{album}": {
            "get": {
                "summary": "List all available songs for this album",
                "tags": [
                    "public"
                ],
                "description": "Returns a list of songs for this album.\n",
                "parameters": [
                    {
                        "name": "album",
                        "in": "path",
                        "description": "Album identifier",
                        "required": true,
                        "type": "string",
                        "format": "uuid"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Song"
                            }
                        }
                    }
                }
            }
        },
        "/music/song/download/{song}": {
            "get": {
                "summary": "Get the download access information for this song",
                "tags": [
                    "protected"
                ],
                "description": "Returns song information, including the download link for this song.\n",
                "security": [
                    {
                        "apiKey": []
                    }
                ],
                "parameters": [
                    {
                        "name": "song",
                        "in": "path",
                        "description": "Song identifier",
                        "required": true,
                        "type": "string",
                        "format": "uuid"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "$ref": "#/definitions/SongWithDownload"
                        }
                    },
                    "403": {
                        "description": "Not Authorized",
                        "examples": {
                            "errors": "Not authorized for this song."
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "examples": {
                            "errors": "Song not found with this id."
                        }
                    },
                    "410": {
                        "description": "Not Available",
                        "examples": {
                            "errors": "This song file is not available."
                        }
                    }
                }
            }
        },
        "/account/register": {
            "post": {
                "summary": "Register a new account",
                "tags": [
                    "account"
                ],
                "description": "Registers a new account.  The credentials can be a new account or match an existing TokenPass account.  If the username matches an existing TokenPass account, then the password must match as well.  Simiilary, if the email matches an existing TokenPass account, then the username and password must match as well\n",
                "parameters": [
                    {
                        "name": "username",
                        "in": "formData",
                        "description": "Username credential",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    },
                    {
                        "name": "email",
                        "in": "formData",
                        "description": "Email address",
                        "required": true,
                        "type": "string",
                        "format": "email"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "Password credential",
                        "required": true,
                        "type": "string",
                        "format": "password"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "$ref": "#/definitions/UserWithCredentials"
                        }
                    },
                    "403": {
                        "description": "Registration error",
                        "examples": {
                            "message": "These credentials do not match our records."
                        }
                    },
                    "422": {
                        "description": "Registration error",
                        "examples": {
                            "message": "Username already taken."
                        }
                    }
                }
            }
        },
        "/account/login": {
            "post": {
                "summary": "Login to an existing account",
                "tags": [
                    "account"
                ],
                "description": "Login to an exsting Tokenly Music or TokenPass account with a username and password.\n",
                "parameters": [
                    {
                        "name": "username",
                        "in": "formData",
                        "description": "Username credential",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "Password credential",
                        "required": true,
                        "type": "string",
                        "format": "password"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "$ref": "#/definitions/UserWithCredentials"
                        }
                    },
                    "403": {
                        "description": "Registration error",
                        "examples": {
                            "message": "These credentials do not match our records."
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Album": {
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "The album unique identifier"
                },
                "name": {
                    "type": "string",
                    "description": "The album name"
                },
                "description": {
                    "type": "string",
                    "description": "Album description",
                    "format": "text"
                },
                "songCount": {
                    "type": "number",
                    "description": "Number of available songs for this album",
                    "format": "int32"
                }
            }
        },
        "Song": {
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "The song unique identifier"
                },
                "name": {
                    "type": "string",
                    "description": "The song name"
                },
                "description": {
                    "type": "string",
                    "description": "Song description",
                    "format": "text"
                }
            }
        },
        "SongWithDownload": {
            "description": "Song with download information",
            "allOf": [
                {
                    "$ref": "#/definitions/Song"
                },
                {
                    "type": "object",
                    "properties": {
                        "downloadUrl": {
                            "type": "string",
                            "format": "url",
                            "description": "The url of the audio file to download"
                        },
                        "downloadSize": {
                            "type": "integer",
                            "format": "int64",
                            "description": "The audio file size in bytes"
                        }
                    }
                }
            ]
        },
        "UserWithCredentials": {
            "description": "User information with API credentials",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "The user ID"
                },
                "username": {
                    "type": "string",
                    "description": "The username"
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The email address"
                },
                "apiToken": {
                    "type": "string",
                    "format": "string",
                    "description": "The API Token for the user"
                },
                "apiSecretKey": {
                    "type": "string",
                    "format": "string",
                    "description": "The API Secret Key for the user"
                }
            }
        }
    }
}